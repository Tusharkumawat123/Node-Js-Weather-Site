<!DOCTYPE html>
<html>
<head>
    {{>header_links}}
</head>
<body>

{{>header}}
<!-- Main header -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <div class="col-md-6 main_header_left">
                        <p>Welcome to Weather App</p>
                        <h1>Get The Latest <span class="text-color">Weather</span> Info Of Your City</h1>
                        <a href="/weather"><button>Check Now</button></a>
                    </div>
                    <div class="col-md-6 main_header_right">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                              <div class="carousel-item active">
                                <img class="w-100" src="image/New_bad_weather.jpg" alt="First slide">
                              </div>
                              <div class="carousel-item">
                                <img class="w-100" src="image/rain_weather.jpg" alt="Second slide">
                              </div>
                              <div class="carousel-item">
                                <img class="w-100" src="image/sunny_day.jpg" alt="Third slide">
                              </div>
                              <div class="carousel-item">
                                <img class="w-100" src="image/Cloudy_day.jpg" alt="Third slide">
                              </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="sr-only">Next</span>
                            </a>
                          </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   {{>footer}}
    
</body>
</html>